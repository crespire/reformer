<%= form_with model: @user do |form| %>
    <%= form.label :username %>
    <%= form.text_field :username %>
    <%= form.label :email %>
    <%= form.text_field :email, placeholder: 'sample@domain.com' %>
    <%= form.label :password %>
    <%= form.password_field :password %>
    <%= form.submit "Register!" %>
<% end %>